{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        "pip install --upgrade pip",
        "pip install -r requirements.txt"
      ]
    }
  },
  "deploy": {
    "startCommand": "alembic upgrade head && uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}"
  }
}

